{{ 'section-animation-heading.css' | asset_url | stylesheet_tag }}
{% style %}
.marquee-animation {
    animation: marquee {{ section.settings.animation_speed }} {{ section.settings.animation_timing_function }} {{ section.settings.animation_iteration }};
    animation-delay: {{ section.settings.animation_delay }};
    animation-direction: {{ section.settings.animation_direction }};
    white-space: nowrap;
    overflow: hidden;
}
.animation-heading {
    background-color: {{ section.settings.background_color }};
    text-align: {{ section.settings.text_align }};
}
.animation-heading h2 {
    color: {{ section.settings.text_color }};
}

.hover-animation {
    animation: hover {{ section.settings.animation_hover_speed }} {{ section.settings.animation_timing_function }} {{ section.settings.animation_iteration }};
    animation-delay: {{ section.settings.animation_hover_delay }};
    animation-direction: {{ section.settings.animation_hover_direction }};
}

.bounce-animation {
    animation: bounce {{ section.settings.animation_speed }} {{ section.settings.animation_timing_function }} {{ section.settings.animation_iteration }};
    animation-delay: {{ section.settings.animation_delay }};
    animation-direction: {{ section.settings.animation_direction }};
}

@keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
}

@keyframes hover {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}
{% endstyle %}
<div class="animation-heading">
    {% if section.settings.enable_animation %}
        <h2 class="animated {% if section.settings.animated_type == "marquee_animation" %} marquee-animation {% elsif section.settings.animated_type == "hover_animation"  %} hover-animation {% elsif section.settings.animated_type == "bounce_animation"  %} bounce-animation {% endif %} ">{{ section.settings.animation_text }}</h2>
    {% else %}
        <h2>{{ section.settings.animation_text }}</h2>
    {% endif %}
</div>
